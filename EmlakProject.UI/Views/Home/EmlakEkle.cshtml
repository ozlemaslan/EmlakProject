@model EmlakProject.Entities.EmlakBilgisi

@{
    ViewData["Title"] = "EmlakEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Emlak Ekle</h1>

<hr />
<div class="row" style="margin-left:30px">
    <div class="col-md-6">
        <form asp-action="EmlakEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(model => model.EmlakTuru, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(a => a.EmlakTuru, (IEnumerable<SelectListItem>)ViewBag.EmlakTuru, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EmlakTuru, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Emlakci.EmlakciAdi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(a => a.EmlakciId, (IEnumerable<SelectListItem>)ViewBag.Emlakcilar, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EmlakciId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MetreKare" class="control-label"></label>
                <input asp-for="MetreKare" class="form-control" />
                <span asp-validation-for="MetreKare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OdaSayisi" class="control-label"></label>
                <input asp-for="OdaSayisi" class="form-control" />
                <span asp-validation-for="OdaSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kat" class="control-label"></label>
                <input asp-for="Kat" class="form-control" type="number"/>
                <span asp-validation-for="Kat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BinaKati" class="control-label"></label>
                <input asp-for="BinaKati" class="form-control" type="number"/>
                <span asp-validation-for="BinaKati" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
